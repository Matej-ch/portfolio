{% extends 'base.html.twig' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <section class="absolute w-full h-full">

        <div class="login-bg"></div>

        <div class="container mx-auto px-4 h-full">
            <div class="flex content-center items-center justify-center h-full">
                <div class="w-full lg:w-4/12 px-4">
                    <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-100 border-0">

                        <canvas id="canvas" class="absolute rounded-lg"></canvas>

                        <div class="flex-auto px-4 lg:px-10 py-10 pt-4 bg-transparent">

                            <div class="text-gray-900 mt-4 text-center mb-4 font-bold text-xl relative">Log In</div>

                            <form method="post">
                                {% if error %}
                                    <div class="relative pb-1 pt-1 bg-red-300 mb-3">{{ error.messageKey }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="relative w-full mb-3">
                                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% endif %}

                                <div class="relative w-full mb-3">
                                    <label for="inputUsername" class="uppercase text-gray-700 text-xs font-bold pb-2 bg-gray-100">Username</label>
                                    <input type="text" value="{{ last_username }}" name="username"
                                           id="inputUsername"
                                           class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full"
                                           autocomplete="username" required autofocus
                                           style="transition: all 0.15s ease 0s;">
                                </div>

                                <div class="relative w-full mb-3">
                                    <label for="inputPassword" class="uppercase text-gray-700 text-xs font-bold pb-2 bg-gray-100">Password</label>
                                    <input type="password" name="password" id="inputPassword"
                                           class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full"
                                           style="transition: all 0.15s ease 0s;"
                                           required>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="mb-3">
                                    <label class="inline-flex items-center cursor-pointer">

                                        <input type="checkbox" name="_remember_me" id="remember_me"
                                               class="form-checkbox border-0 rounded text-gray-800 ml-1 w-5 h-5"
                                               style="transition: all 0.15s ease 0s;">

                                        <span class="ml-2 text-sm font-semibold text-gray-700">Keep me logged in</span>
                                    </label>
                                </div>

                                <button class="btn btn-login bg-gray-100" type="submit">Log In</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {{ encore_entry_script_tags('shapes') }}
{% endblock %}