<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon-32x32.png') }}" type="image/x-icon">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% block header %}
            {{ include('fragments/_header.html.twig') }}

            {{ encore_entry_script_tags('header') }}

        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            {{ include('fragments/_footer.html.twig') }}
        {% endblock %}
    </body>
</html>
