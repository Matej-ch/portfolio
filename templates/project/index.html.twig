{% extends 'base.html.twig' %}

{% block title %}
    Projects
{% endblock %}

{% block body %}

    <h1>All my projects</h1>

    {% if projects|length > 0 %}
        <p>There are {{ projects|length }} projects</p>
        {% for project in projects %}
            <p>{{ project.name }}</p>
            <div>{{ project.description }}</div>
            <a href="{{ path('project_show',{slug:project.slug}) }}">Project {{ project.name }}</a>

        {% endfor %}

        {% if previous >= 0 %}
            <a href="{{ path('app_project', { offset: previous }) }}">Previous</a>
        {% endif %}
        {% if next < projects|length %}
            <a href="{{ path('app_project', { offset: next }) }}">Next</a>
        {% endif %}
    {% else %}
        <div>No projects added.</div>
    {% endif %}



{% endblock %}

