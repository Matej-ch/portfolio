{% extends 'base.html.twig' %}

{% block title %} Project {% endblock %}

{% block body %}

    <div class="w-full max-w-5xl mx-auto my-0 pt-6">
        <header>
            <h1 class="text-slate-700 text-3xl leading-10 mb-2">{{ project.name }} - ({{ project.fullState.name }})</h1>

            {% if project.shortDescription %}
                <p class="text-base mb-2">
                    {{ project.shortDescription }}
                </p>
            {% endif %}


            <div class="flex flex-row justify-between">
                <div>
                    <button class="btn btn-blue"><i
                                class="fas fa-external-link-alt"></i>
                        Url btn to page
                    </button>
                </div>
                <div>Other links or source code btn ?</div>
            </div>

        </header>

        {% if project.createdAt %}
            <div>Created: {{ project.createdAt|ago }}</div>
        {% else %}
            (not published)
        {% endif %}

        {% if project.bgImg %}
            <div class="cover h-64"
                 style='background: url("{{ asset('uploads/projects/%s' | format(project.bgImg)) }}");'>
            </div>
        {% endif %}

        <div class="py-6">
            {{ project.description|raw }}
        </div>

        <h2 class="text-xl leading-10 text-slate-700">Technical Sheet</h2>

        <div>Languages for projects</div>

        <div class="mt-4 py-5 border-t border-slate-300 text-center">
            <div class="flex flex-wrap justify-start">
                <div class="w-full px-4 flex flex-wrap space-x-2 justify-start">
                    {% for language in project.language %}
                        <a class="tag" href="{{ path('app_homepage', { q: language.name }) }}">{{ language.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="mt-4 py-5 border-t border-slate-300 text-center">
            <div class="flex flex-wrap justify-start">
                <div class="w-full px-4 flex flex-wrap space-x-2 justify-start">
                    {% for tag in project.tags %}
                        <a class="tag" href="{{ path('app_homepage', { q: tag.name }) }}">{{ tag.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


{% endblock %}