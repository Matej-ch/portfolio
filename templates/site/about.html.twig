{% extends 'base.html.twig' %}

{% block title %}
    About me
{% endblock %}

{% block body %}
    <main class="profile-page">
        <section class="relative block w-full max-w-full" style="height: 500px;">
            <div class="absolute top-0 w-full h-full bg-center js-background-parent">
                <canvas id="background" class="w-full"></canvas>
            </div>
        </section>
        <section class="relative py-16 bg-gray-300">
            <div class="container mx-auto px-4">
                <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg lg:-mt-64 md:-mt-72 -mt-96">
                    <div class="px-6">
                        <div class="flex flex-wrap justify-center">
                            <div class="w-full lg:w-3/12 px-4 lg:order-2 flex justify-center">
                                <div class="relative">
                                    <img alt="..."
                                         src="https://via.placeholder.com/150"
                                         class="shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16"
                                         style="max-width: 150px;"/>
                                </div>
                            </div>
                            <div class="w-full lg:w-4/12 px-4 lg:order-3 lg:text-right lg:self-center">
                                <div class="py-6 px-3 mt-32 sm:mt-0" id="tooltip-wrapper">
                                    {# <button
                                            class="bg-blue-500 active:bg-pink-blue uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1"
                                            type="button"
                                            style="transition: all 0.15s ease 0s;">
                                        <i class="fas fa-envelope text-lg"></i>
                                        Contact modal email
                                    </button> #}
                                </div>
                            </div>
                            <div class="w-full lg:w-4/12 px-4 lg:order-1">
                                <div class="flex justify-center py-4 lg:pt-4 pt-8">
                                    something here, external sites ?
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-12">
                            <h3 class="text-4xl font-semibold leading-normal mb-2 text-gray-800 mb-2">
                                Name
                            </h3>
                            <div class="text-sm leading-normal mt-0 mb-2 text-gray-500 font-bold uppercase">
                                <i class="fas fa-map-marker-alt mr-2 text-lg text-gray-500"></i>
                                Location
                            </div>
                            <div class="mb-2 text-gray-700 mt-10">
                                <i class="fas fa-briefcase mr-2 text-lg text-gray-500"></i>
                                Work
                            </div>
                            <div class="mb-2 text-gray-700">
                                <i class="fas fa-university mr-2 text-lg text-gray-500"></i>
                                Education
                            </div>
                        </div>

                        <div class="mt-5 py-10 border-t border-gray-300 text-center">
                            <div class="flex flex-wrap justify-center">
                                <div class="w-full lg:w-9/12 px-4">
                                    <p class="mb-4 text-lg leading-relaxed text-gray-800">
                                        Text about person
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 py-5 border-t border-gray-300 text-center">
                            <div class="flex flex-wrap justify-center">
                                <div class="w-full px-4">
                                    <p class="mb-4 text-lg leading-relaxed text-gray-800">
                                        {% for language in languages %}
                                            <a class="tag" href="#">{{ language.name }}</a>
                                        {% endfor %}
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 py-5 border-t border-gray-300 text-center">
                            <div class="flex flex-wrap justify-center">
                                <div class="w-full px-4 flex flex-wrap space-x-2 justify-center">
                                    {% for tag in tags %}
                                        <a class="tag" href="#">{{ tag.name }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {{ encore_entry_script_tags('tooltip') }}
    {{ encore_entry_script_tags('background') }}
{% endblock %}



