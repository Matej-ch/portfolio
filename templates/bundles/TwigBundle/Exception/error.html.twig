{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    <div class="error-bg min-h-screen">
        <div class="w-8/12 md:w-6/12 lg:w-3/12 m-auto py-4 md:py-16 flex items-center justify-center">
            <div class="bg-white shadow overflow-hidden sm:rounded-lg pb-8">
                <div class="border-t border-slate-200 text-center pt-8 px-8">
                    <h1 class="text-3xl md:text-6xl font-bold text-red-400 py-4">{{ status_code }}</h1>
                    <h1 class="text-xl md:text-3xl font-medium py-4 text-red-500">{{ status_text }}</h1>
                    <p class="text-sm md:text-xl pb-4 px-6 md:pb-8 md:px-12 font-medium">Oops! This is probably bad</p>
                    <a href="{{ path('app_homepage') }}" class="btn btn-red">
                        Return home
                    </a>
                </div>
            </div>
        </div>

        {{ include('fragments/_waves.html.twig') }}
    </div>

{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}