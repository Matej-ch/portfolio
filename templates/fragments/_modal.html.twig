<div class="hidden overflow-x-hidden overflow-y-auto fixed inset-0 z-50 outline-none focus:outline-none justify-center items-center text-left"
    data-modal-form-target="modal">
    <div class="relative w-auto my-6 mx-auto max-w-sm">
        <!--content-->
        <div class="border-0 rounded-lg shadow-lg relative flex flex-col w-full bg-white outline-none focus:outline-none">
            <!--header-->
            <div class="flex items-start justify-between p-5 border-b border-solid border-gray-200 rounded-t">
                <h3 class="text-3xl font-semibold">
                    {{ modalTitle }}
                </h3>
                <button class="p-1 ml-auto bg-transparent border-0 text-black opacity-5 float-right text-3xl leading-none font-semibold outline-none focus:outline-none"
                        data-action="modal-form#closeModal">
                    <span class="bg-transparent text-black opacity-5 h-6 w-6 text-2xl block outline-none focus:outline-none">
                        Ã—
                    </span>
                </button>
            </div>
            <!--body-->
            <div class="relative p-6 flex-auto">
                <p class="my-4 text-gray-500 text-lg leading-relaxed">
                    {{ modalContent|default('Loading...') }}
                </p>
            </div>
            <!--footer-->
            <div class="flex items-center justify-end p-6 border-t border-solid border-gray-200 rounded-b space-x-2">
                <button class="btn btn-red ease-linear transition-all duration-150"
                        type="button"
                        data-action="modal-form#closeModal">
                    Close
                </button>
                <button class="btn btn-success ease-linear transition-all duration-150" type="button">
                    Send
                </button>
            </div>
        </div>
    </div>
</div>
<div class="hidden opacity-50 fixed inset-0 z-40 bg-black" data-modal-form-target="backdrop"></div>